<?xml version="1.0" ?>
<STATES>
	<MENU>
		<TEXTURES>
			<texture filename="assets/menu_play.png" ID="playbutton"/>
			<texture filename="assets/menu_exit.png" ID="exitbutton"/>
		</TEXTURES>

		<OBJECTS>
			<object type="MenuButton" x="100" y="100" width="400" height="100" textureID="playbutton" numFrames="0" callbackID="1"/>
			<object type="MenuButton" x="100" y="300" width="400" height="100" textureID="exitbutton" numFrames="0" callbackID="2"/>
		</OBJECTS>
	</MENU>

	<PLAY>
		<TEXTURES>
			<texture filename="assets/deer-sprite.png" ID="helicopter"/>
			<texture filename="assets/deer-sprite.png" ID="helicopter2"/>
		</TEXTURES>
		<OBJECTS>
			<object type="Player" x="500" y="100" width="280" height="350" textureID="helicopter" numFrames="5"/>
			<object type="Enemy" x="100" y="100" width="280" height="350" textureID="helicopter2" numFrames="5"/>
		</OBJECTS>
	</PLAY>

	<PAUSE>
		<TEXTURES>
			<texture filename="assets/menu_resume.png" ID="resumebutton"/>
			<texture filename="assets/menu_main.png" ID="mainbutton"/>
		</TEXTURES>
		<OBJECTS>
			<object type="MenuButton" x="100" y="100" width="138" height="53" textureID="mainbutton" numFrames="3" callbackID="1"/>
			<object type="MenuButton" x="100" y="300" width="138" height="53" textureID="resumebutton" numFrames="3" callbackID="2"/>
		</OBJECTS>
	</PAUSE>

	<GAMEOVER>
		<TEXTURES>
			<texture filename="assets/game_over.png" ID="gameovertext"/>
			<texture filename="assets/menu_main.png" ID="mainbutton"/>
			<texture filename="assets/menu_restart.png" ID="restartbutton"/>
		</TEXTURES>
		<OBJECTS>
			<object type="AnimatedGraphic" x="200" y="100" width="190" height="30" textureID="gameovertext" numFrames="2" animSpeed="2"/>
			<object type="MenuButton" x="200" y="200" width="138" height="53" textureID="mainbutton" numFrames="3" callbackID="1"/>
			<object type="MenuButton" x="200" y="300" width="138" height="53" textureID="restartbutton" numFrames="3" callbackID="2"/>
		</OBJECTS>
	</GAMEOVER>
</STATES>